---
import { site } from '@/config'
import { Logo } from '@/components/Logo'
import { SocialIcons } from '@/components/SocialIcons'
import { NavItems } from '@/components/NavItems'
---

<header class="relative z-50 flex flex-col">
  <div class="bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 border-b border-border">
    <div class="container mx-auto flex h-16 items-center justify-between px-4 sm:px-6 lg:px-8">
      <!-- Left side -->
      <div class="flex items-center space-x-2">
        <Logo class="h-8 w-8" />
        <div class="flex flex-col leading-tight">
          <span class="font-semibold text-lg tracking-tight text-foreground">NovaNest</span>
          <span class="text-sm text-muted-foreground">Digital Insights, Real Growth</span>
        </div>
      </div>

      <!-- Right side -->
      <div class="flex items-center gap-6">
        <nav class="hidden md:flex gap-6 text-sm">
          <NavItems />
        </nav>
        <div class="hidden md:flex">
          <SocialIcons />
        </div>
        <button
          id="mobile-nav-button"
          class="relative z-50 flex h-8 w-8 items-center justify-center md:hidden"
          aria-label="Toggle Navigation"
          aria-expanded="false"
        >
          <svg class="h-6 w-6 text-foreground" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Nav Overlay -->
  <div id="mobile-nav-overlay" class="fixed inset-0 z-40 bg-background/80 backdrop-blur-sm hidden"></div>

  <!-- Mobile Nav Panel -->
  <div id="mobile-nav-panel" class="fixed inset-y-0 right-0 z-50 w-64 transform translate-x-full transition-transform duration-300 ease-in-out bg-background p-6 shadow-lg md:hidden">
    <nav class="flex flex-col space-y-4 text-sm">
      <NavItems />
    </nav>
    <div class="mt-6">
      <SocialIcons />
    </div>
  </div>

  <script type="module">
    class MobileNavBtn {
      menuOpen = false;
      mobileButtonEl: HTMLElement;
      menuPanel: HTMLElement;
      overlay: HTMLElement;

      constructor() {
        this.mobileButtonEl = document.getElementById("mobile-nav-button")!;
        this.menuPanel = document.getElementById("mobile-nav-panel")!;
        this.overlay = document.getElementById("mobile-nav-overlay")!;
        this.mobileButtonEl.addEventListener("click", this.toggleMenu.bind(this));
        document.addEventListener("keydown", this.handleEscape.bind(this));
        this.overlay.addEventListener("click", this.closeMenu.bind(this));
      }

      toggleMenu() {
        this.menuOpen = !this.menuOpen;
        document.body.classList.toggle("mobile-menu-open", this.menuOpen);
        this.mobileButtonEl.setAttribute("aria-expanded", this.menuOpen.toString());
        this.menuPanel.classList.toggle("translate-x-full", !this.menuOpen);
        this.overlay.classList.toggle("hidden", !this.menuOpen);
      }

      closeMenu() {
        this.menuOpen = false;
        this.mobileButtonEl.setAttribute("aria-expanded", "false");
        this.menuPanel.classList.add("translate-x-full");
        this.overlay.classList.add("hidden");
        document.body.classList.remove("mobile-menu-open");
      }

      handleEscape(e: KeyboardEvent) {
        if (e.key === "Escape" && this.menuOpen) {
          this.closeMenu();
        }
      }
    }

    new MobileNavBtn();
  </script>
</header>
